<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.actions.act_window" id="action_nursery_customer">
        <field name="name">Customers</field>
        <field name="res_model">nursery.customer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Customers" id="nursery_customer_menu"
              parent="nursery_main_menu" action="action_nursery_customer"
              sequence="2"/>

    <record model="ir.ui.view" id="nursery_customer_view_form">
        <field name="name">nursery.customer.view.form</field>
        <field name="model">nursery.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="nursery_customer_view_tree">
        <field name="name">nursery.customer.view.tree</field>
        <field name="model">nursery.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
</odoo>